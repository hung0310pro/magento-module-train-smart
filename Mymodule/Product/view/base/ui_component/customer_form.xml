<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="customer">
        <field name="customer_image" formElement="imageUploader">
            <settings>
                <notice translate="true">Upload avatar For Product</notice>
                <label translate="true">Avatar</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">customer/file/customer_upload</param>
                        </uploaderConfig>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
    </fieldset>
</form>
